<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.lang.Integer"/>

        <import type="com.group4.patientdoctorconsultation.utilities.BindingAdapters"/>

        <variable
                name="profileHandler"
                type="com.group4.patientdoctorconsultation.ui.fragment.ProfileFragment"/>

        <variable
                name="profile"
                type="com.group4.patientdoctorconsultation.data.model.Profile"/>

    </data>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/dname"
            android:layout_marginTop="51dp"
            android:text="Name"
            android:textSize="20sp"
            tools:text="Name"
            android:textColor="@color/colorPrimary"/>

        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/specialty"
                android:layout_alignTop="@+id/textView"
                android:contentDescription="Specialty"
                android:text="Specialty"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="154dp"
            android:text="Location"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <EditText
                android:id="@+id/dname"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="80dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"/>

        <EditText
                android:id="@+id/specialty"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dname"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Specialty"/>

        <EditText
                android:id="@+id/location"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/dname"
                android:layout_below="@+id/textView3"
                android:ems="10"
                android:hint="B01.101"
                android:inputType="textPersonName"/>

        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignTop="@+id/textView3"
                android:text="E-mail"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"/>

        <EditText
                android:id="@+id/email"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignTop="@+id/location"
                android:ems="10"
                android:hint="123@gmail.com"
                android:inputType="textPersonName"/>

        <Button
                android:id="@+id/edit_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/dname"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="67dp"
                android:text="Save"
            android:textSize="20sp"
            android:textColor="@color/colorOffWhite"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_centerVertical="true"
            android:text="Description"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="175dp"
            android:ems="10"
            android:hint="I am......"
            android:inputType="textPersonName" />

        <Button
                android:id="@+id/sign_out_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/edit_save"
                android:layout_toEndOf="@+id/textView4"
                android:text="Sign out"
            android:textSize="20sp"
            android:textColor="@color/colorOffWhite"
            android:background="@color/colorPrimary"/>


    </RelativeLayout>
</layout>